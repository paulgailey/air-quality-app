{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**", "src/**/*.ts"],
        "maxLambdaSize": "50mb",
        "runtime": "nodejs18.x",
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/public/$1",
      "headers": { "Cache-Control": "public, max-age=3600" }
    },
    {
      "src": "/(.*)",
      "dest": "src/index.ts",
      "headers": { 
        "Cache-Control": "no-store",
        "X-Robots-Tag": "noindex"
      }
    }
  ]
}