{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",  // ONLY CHANGE: ESNext to NodeNext
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}